# editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
indent_style = space
indent_size = 4

# Set default charset
charset = utf-8

# Denotes whether whitespace is allowed at the end of lines
trim_trailing_whitespace = true

[*.md]
# Denotes whether whitespace is allowed at the end of lines
trim_trailing_whitespace = false
